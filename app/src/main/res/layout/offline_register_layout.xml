<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_bg">

   <TextView
        android:id="@+id/txt_key"
        android:layout_width="321dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
       android:textAlignment="center"
        android:text="Enter Lisence "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_activation_status" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txlisense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_activation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_key">

        <EditText
            android:id="@+id/txt_activation_key"
            android:layout_width="319dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:textSize="24sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/input_text_dimensions"
            app:layout_constraintTop_toBottomOf="@+id/txt_key" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_activate"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:text="Activate APP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/add_item_button_design"
        app:layout_constraintTop_toBottomOf="@+id/txlisense" />

    <ImageView
        android:id="@+id/img_activation_status"
        android:layout_width="239dp"
        android:layout_height="223dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <Button
        android:id="@+id/cmd_cancel_activation"
        android:layout_width="191dp"
        android:layout_height="54dp"
        android:layout_marginTop="62dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/add_item_button_design"
        app:layout_constraintTop_toBottomOf="@+id/btn_activate" />
</androidx.constraintlayout.widget.ConstraintLayout>