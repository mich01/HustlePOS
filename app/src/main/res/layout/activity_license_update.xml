<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mich01.hustlepos.UI.Setup.LicenseUpdate">

  <TextView
      android:id="@+id/txt_lisense_information"
      android:layout_width="match_parent"
      android:layout_height="228dp"
      android:textAlignment="center"
      android:gravity="center"
      android:textSize="30sp"
      android:textStyle="bold"
      android:text=""
      tools:layout_editor_absoluteX="10dp"
      tools:layout_editor_absoluteY="1dp" />

  <Button
      android:id="@+id/how_to_activate"
      android:layout_width="307dp"
      android:layout_height="65dp"
      android:layout_marginTop="84dp"
      android:text="@string/how_to_activate"
      android:background="@drawable/alert_dialog_bg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txt_lisense_information" />

  <Button
      android:id="@+id/license_online"
      android:layout_width="307dp"
      android:layout_height="65dp"
      android:layout_marginTop="84dp"
      android:text="Activate Online"
      android:background="@drawable/alert_dialog_bg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/how_to_activate" />

  <Button
      android:id="@+id/license_offline"
      android:layout_width="307dp"
      android:layout_height="65dp"
      android:layout_marginTop="92dp"
      android:text="Enter Key to Activate"
      android:background="@drawable/alert_dialog_bg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/license_online"
      tools:layout_editor_absoluteX="60dp" />
</androidx.constraintlayout.widget.ConstraintLayout>